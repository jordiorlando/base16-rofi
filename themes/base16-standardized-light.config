! Enable the extended coloring options
rofi.color-enabled: true

! Property Name     BG       Border   Separator
rofi.color-window:  #eeeeee, #eeeeee, #ffffff

! Property Name     BG       FG       BG-alt   Head-BG  Head-FG
rofi.color-normal:  #eeeeee, #444444, #eeeeee, #eeeeee, #222222
rofi.color-active:  #eeeeee, #3173c5, #eeeeee, #eeeeee, #3173c5
rofi.color-urgent:  #eeeeee, #d03e3e, #eeeeee, #eeeeee, #d03e3e

! Set the desired separator style
rofi.separator-style: solid
